{
  "compilerOptions": {
    "strict": false,
    "module": "esnext",
    "target": "es6",
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitThis": true,
    "declaration": true,
    "declarationDir": "./types",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@web3auth/base": ["packages/base/src"],
      "@web3auth/core": ["packages/core/src"],
      "@web3auth/ui": ["packages/ui/src"],
      "@web3auth/modal": ["packages/modal/src"],
      "@web3auth/ethereum-provider": ["packages/providers/eth-provider/src"],
      "@web3auth/solana-provider": ["packages/providers/solana-provider/src"],
      "@web3auth/torus-wallet-adapter": ["packages/wallets/torusWalletAdapter/src"],
      "@web3auth/solana-wallet-adapter": ["packages/wallets/solanaWalletAdapter/src"],
      "@web3auth/openlogin-adapter": ["packages/wallets/openloginAdapter/src"],
      "@web3auth/metamask-wallet-adapter": ["packages/wallets/metamaskAdapter/src"],
      "@web3auth/phantom-wallet-adapter": ["packages/wallets/phantomWalletAdapter/src"],
      "@web3auth/customauth-adapter": ["packages/wallets/customauthAdapter/src"],
      "@web3auth/wallet-connect-v1-adapter": ["packages/wallets/walletConnectV1Adapter/src"],
    }
  }
}
